<!DOCTYPE html>
<html>
  <head>
    <title>Blogapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <nav class="navbar navbar-inverse">
    <%= link_to 'Greybearded Biker Blog' , root_path, class: 'navbar-brand' %>
    <div class="container">
      <p class="nav navbar-nav ml-auto">
        <% if user_signed_in? %>
        <%= link_to 'New Post', new_post_path, class: 'navbar-link' %>
        <% else %>
        <%= link_to 'Admin Login', new_user_session_path, class: 'navbar-link' %>
        <% end %>
      </p>
    </div>
  </nav>
  <div class="col-md-10 col-md-offset-1">
    <%= yield %>
  </div>
  </body>
</html>
